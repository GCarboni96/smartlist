<MenuOpcionesWindow>:
    name: "menuopciones"

    FloatLayout:
        canvas.before:
            Color:
                rgba:(241/255,228/255,232/255,1)
            Rectangle:
                pos: self.pos
                size: self.size


        FloatLayout:
            pos_hint: {"top":0.9}
            size_hint: 1, 0.75
            padding: 30, 10


            Label:
                text:"[b]Opciones[/b]"
                markup: True
                halign: 'left'
                valign: 'center'
                font_size: (root.width**2 + root.height**2) / 14**4
                pos_hint: {"x":0.08, "top":1}
                size_hint: 0.8, 0.1
                color: 37/255,65/255,178/255,1
                text_size: self.size



            GridLayout:
                pos_hint: {"x":0.08, "top":0.9}
                size_hint: 0.85, 0.8
                cols:2
                size_hint_y: None
                height:self.minimum_height
                row_default_height: '100dp'
                row_force_default: True
                spacing: 5, 5
                padding: 0, 0
                canvas.before:
                    Color:
                        rgba:(56/255,163/255,165/255,1)
                    Rectangle:
                        pos: self.pos
                        size: self.size



                Label:
                    text:"[b]Notificaciones[/b]"
                    markup: True
                    halign: 'center'
                    valign: 'center'
                    font_size: (root.width**2 + root.height**2) / 15**4
                    color: 1,1,1,1
                    text_size: self.size

                CheckBox:
                    allow_stretch: True
                    color: 0,0,0,1
                    background_color: 0.9,0.9,0.9,1

                Label:
                    text:"[b]Efectos de sonido[/b]"
                    markup: True
                    halign: 'center'
                    valign: 'center'
                    font_size: (root.width**2 + root.height**2) / 15**4
                    color: 1,1,1,1
                    text_size: self.size

                CheckBox:
                    allow_stretch: True
                    color: 0,0,0,1
                    background_color: 0.9,0.9,0.9,1

                Label:
                    text:"[b]Restricciones de movilidad[/b]"
                    markup: True
                    halign: 'center'
                    valign: 'center'
                    font_size: (root.width**2 + root.height**2) / 15**4
                    color: 1,1,1,1
                    text_size: self.size


                AnchorLayout:
                    Button:
                        size_hint: 0.5, 0.5
                        text: "[font=Arial]Editar[/font]"
                        markup: True
                        font_size: (root.width**2 + root.height**2) / 15**4
                        background_color: 37/255,65/255,178/255,1
                        on_release:
                            app.root.current = "opcionescondiciones"
                            root.manager.transition.direction = "left"


                Label:
                    text:"[b]Factores de Riesgo[/b]"
                    markup: True
                    halign: 'center'
                    valign: 'center'
                    font_size: (root.width**2 + root.height**2) / 15**4
                    color: 1,1,1,1
                    text_size: self.size

                AnchorLayout:
                    Button:
                        size_hint: 0.5, 0.5
                        text: "[font=Arial]Editar[/font]"
                        markup: True
                        font_size: (root.width**2 + root.height**2) / 15**4
                        background_color: 37/255,65/255,178/255,1
                        on_release:
                            app.root.current = "opcionesfactores"
                            root.manager.transition.direction = "left"
            GridLayout:
                cols:1
                pos_hint: {"top":0.25,"x":0.2}
                size_hint: 0.6, 0.2
                AnchorLayout:
                    Button:
                        size_hint: 0.8, 0.3
                        text: "[font=Arial]Cerrar Sesi√≥n[/font]"
                        markup: True
                        font_size: (root.width**2 + root.height**2) / 15**4
                        background_color: 240/255,58/255,71/255,1
                        on_release:
                            root.cerrar_sesion()

        GridLayout:
            cols:4
            pos_hint: {"top":0.15}
            size_hint: 1, 0.15
            canvas.before:
                Color:
                    rgba: (.1,.1,.1,1)
                Line:
                    width: 3
                    rectangle: self.x-5,self.y-5,self.width+10, self.height+8
                Rectangle:
                    pos: self.pos
                    size: self.size

            GrupoBut:



            ComprasBut:





            PedidosBut:



            OpcionesBut:
                disabled: True
                background_normal: ''
                background_disabled_normal: self.background_normal
