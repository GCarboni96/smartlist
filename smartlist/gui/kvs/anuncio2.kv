<Anuncio2Window>:
    name: "anuncio2"
    dinero: dinero
    peso: peso
    cantidad: cantidad

    FloatLayout:
        canvas.before:
            Color:
                rgba:(241/255,228/255,232/255,1)
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            pos_hint: {"top":0.9}
            size_hint: 1, 0.75
            orientation: 'vertical'
            padding: 10, 10
            row_default_height: '40dp'
            row_force_default: True
            spacing: 10, 100

            GoBackBut:
                size_hint: 0.1, 0.1
                on_release:
                    app.root.current = "anuncio1"
                    root.manager.transition.direction = "right"


            Label:
                text:"[b]Restricciones[/b]"
                markup: True
                halign: 'center'
                valign: 'center'
                font_size: (root.width**2 + root.height**2) / 13**4
                pos_hint: {"x":0, "top":1}
                size_hint: 1, 0.1
                color: 37/255,65/255,178/255,1
                text_size: self.size
            Label:
                text:"[font=Arial]Indique las restricciones para\nlos productos que encarguen\nsus vecinos[/font]."
                markup: True
                halign: 'center'
                valign: 'center'
                font_size: (root.width**2 + root.height**2) / 15**4
                pos_hint: {"x":0, "top":0.94}
                size_hint: 1, 0.15
                color: 0,0,0,1
                text_size: self.size
            GridLayout:
                cols:1
                size_hint_y: None
                height:self.minimum_height
                spacing: 0, 15
                padding: 16, 30

                row_default_height: '60dp'

                Label:
                    text:"[b]Presupuesto máximo:[/b]"
                    markup: True
                    halign: 'left'
                    valign: 'center'
                    font_size: (root.width**2 + root.height**2) / 14**4
                    pos_hint: {"x":0.1, "top":0.85}
                    size_hint: 0.9, 0.2
                    color: 37/255,65/255,178/255,1
                    text_size: self.size
                FloatLayout:
                    size_hint: 1,1

                    TextInput:
                        id: dinero
                        text:"10000"
                        font_size: (root.width**2 + root.height**2) / 14**4
                        multiline: False
                        pos_hint: {"x": 0.1 , "top":0.85}
                        size_hint: 0.6, 0.8
                        halign: 'center'
                    Label:
                        text:"[b]$[/b]"
                        markup: True
                        halign: 'center'
                        valign: 'center'
                        font_size: (root.width**2 + root.height**2) / 14**4
                        pos_hint: {"x":0.7, "top":1}
                        size_hint: 0.1, 1
                        color: 0,0,0,1
                        text_size: self.size
                    PlusBut:
                        pos_hint: {"x":0.8, "top":1.4}
                        size_hint: 0.1, 1
                        on_release:
                            root.add_dinero()
                    MinusBut:
                        pos_hint: {"x":0.8, "top":0.6}
                        size_hint: 0.1, 1
                        on_release:
                            root.minus_dinero()



                Label:
                    text:"[b]Peso máximo:[/b]"
                    markup: True
                    halign: 'left'
                    valign: 'center'
                    font_size: (root.width**2 + root.height**2) / 14**4
                    pos_hint: {"x":0.1, "top":0.85}
                    size_hint: 0.9, 0.2
                    color: 37/255,65/255,178/255,1
                    text_size: self.size
                FloatLayout:
                    size_hint: 1,1

                    TextInput:
                        id: peso
                        text:"10.0"
                        font_size: (root.width**2 + root.height**2) / 14**4
                        multiline: False
                        pos_hint: {"x": 0.1 , "top":0.85}
                        size_hint: 0.6, 0.8
                        halign: 'center'
                    Label:
                        text:"[b]kg[/b]"
                        markup: True
                        halign: 'center'
                        valign: 'center'
                        font_size: (root.width**2 + root.height**2) / 14**4
                        pos_hint: {"x":0.7, "top":1}
                        size_hint: 0.1, 1
                        color: 0,0,0,1
                        text_size: self.size
                    PlusBut:
                        pos_hint: {"x":0.8, "top":1.4}
                        size_hint: 0.1, 1
                        on_release:
                            root.add_peso()
                    MinusBut:
                        pos_hint: {"x":0.8, "top":0.6}
                        size_hint: 0.1, 1
                        on_release:
                            root.minus_peso()
                Label:
                    text:"[b]Cantidad máxima:[/b]"
                    markup: True
                    halign: 'left'
                    valign: 'center'
                    font_size: (root.width**2 + root.height**2) / 14**4
                    pos_hint: {"x":0.1, "top":0.85}
                    size_hint: 0.9, 0.2
                    color: 37/255,65/255,178/255,1
                    text_size: self.size
                FloatLayout:
                    size_hint: 1,1

                    TextInput:
                        id: cantidad
                        text:"10"
                        font_size: (root.width**2 + root.height**2) / 14**4
                        multiline: False
                        pos_hint: {"x": 0.1 , "top":0.85}
                        size_hint: 0.6, 0.8
                        halign: 'center'
                    PlusBut:
                        pos_hint: {"x":0.8, "top":1.4}
                        size_hint: 0.1, 1
                        on_release:
                            root.add_cantidad()
                    MinusBut:
                        pos_hint: {"x":0.8, "top":0.6}
                        size_hint: 0.1, 1
                        on_release:
                            root.minus_cantidad()

        GridLayout:
            cols:1
            pos_hint: {"top":0.15}
            size_hint: 1, 0.15
            AnchorLayout:
                Button:
                    size_hint: 0.8, 0.3
                    text: "[font=Arial]Confirmar Anuncio[/font]"
                    markup: True
                    font_size: (root.width**2 + root.height**2) / 15**4
                    background_color: 81/255,255/255,85/255,1
                    on_release:
                        root.check_compra()
