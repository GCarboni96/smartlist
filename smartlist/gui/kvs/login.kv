<LoginWindow>:
    name: "login"
    user: user
    password: password
    main:main
    FloatLayout:
        id:main


        canvas.before:
            Color:
                rgba:(241/255,228/255,232/255,1)
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text:"[b]SmartList[/b]"
            markup: True
            font_size: (root.width**2 + root.height**2) / 12**4
            pos_hint: {"x":0.5, "top":0.85}
            size_hint: 0, 0
            color: 37/255,65/255,178/255,1
        FloatLayout:
            pos_hint: {"x":0.1,"top":0.75}
            size_hint: 0.8, 0.35
            canvas.before:
                Color:
                    rgba:(56/255,163/255,165/255,1)
                Rectangle:
                    pos: self.pos
                    size: self.size

            Label:
                text:"[b]Usuario: [/b]"
                markup: True
                font_size: (root.width**2 + root.height**2) / 14**4
                pos_hint: {"x":0.1, "top":0.9}
                size_hint: 0.35, 0.125
                color: 1,1,1,1

            TextInput:
                id: user
                font_size: (root.width**2 + root.height**2) / 15**4
                multiline: False
                pos_hint: {"x": 0.5 , "top":0.9}
                size_hint: 0.4, 0.125
                color: 1,1,1,1

            Label:
                text:"[b]Contraseña: [/b]"
                markup: True
                font_size: (root.width**2 + root.height**2) / 14**4
                pos_hint: {"x":0.1, "top":0.7}
                size_hint: 0.35, 0.125
                color: 1,1,1,1


            TextInput:
                id: password
                font_size: (root.width**2 + root.height**2) / 14**4
                multiline: False
                password: True
                pos_hint: {"x": 0.5, "top":0.7}
                size_hint: 0.4, 0.125

            Button:
                pos_hint:{"x":0.3,"y":0.3}
                size_hint: 0.4, 0.175
                text: "[font=Arial]Login[/font]"
                markup: True
                font_size: (root.width**2 + root.height**2) / 14**4
                background_color: 37/255,65/255,178/255,1
                border: (10,10,10,10)
                on_release:
                    root.manager.transition.direction = "left"
                    root.try_login()


            Button:
                pos_hint:{"x":0.2,"y":0.1}
                size_hint: 0.6, 0.125
                text: "[font=Arial]Olvide Contraseña[/font]"
                markup: True
                font_size: (root.width**2 + root.height**2) / 15**4
                background_color: 240/255,58/255,71/255,1
                border: (10,10,10,10)


        Button:
            pos_hint:{"x":0.3,"y":0.33}
            size_hint: 0.4, 0.05
            text: "[font=Arial]Nuevo Usuario[/font]"
            markup: True
            font_size: (root.width**2 + root.height**2) / 15**4
            background_color: 81/255,255/255,85/255,1
            border: (16,16,16,16)
            on_release:
                app.root.current = "newuser1"
                root.manager.transition.direction = "left"


        Button:
            pos_hint:{"x":0.2,"y":0.25}
            size_hint: 0.6, 0.05
            text: "[font=Arial]Entrar con Cuenta Google[/font]"
            markup: True
            font_size: (root.width**2 + root.height**2) / 15**4
            background_color: 37/255,65/255,178/255,1
            border: (10,10,10,10)
