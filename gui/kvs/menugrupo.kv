            FloatLayout:
                pos_hint: {"top":0.55}
                size_hint: 1, 0.4


                Label:
                    text:"[b]Clave de invitación:[/b]"
                    markup: True
                    multiline: True
                    halign: 'left'
                    font_size: (root.width**2 + root.height**2) / 14**4
                    pos_hint: {"x":0.35, "top":0.8}
                    size_hint: 0, 0
                    color: 37/255,65/255,178/255,1

                CopyClickboardBut:
                    pos_hint: {"top":0.6}
                    size_hint: 0.4, 0.4


                TextInput:
                    id: group_code
                    font_size: (root.width**2 + root.height**2) / 14**4
                    multiline: False
                    pos_hint: {"x": 0.28 , "top":0.6}
                    size_hint: 0.6, 0.3
                    readonly: True
                    text: "nodata"


        GridLayout:
            cols:4
            pos_hint: {"top":0.15}
            size_hint: 1, 0.15
            canvas.before:
                Color:
                    rgba: (.1,.1,.1,1)
                Line:
                    width: 3
                    rectangle: self.x-5,self.y-5,self.width+10, self.height+8
                Rectangle:
                    pos: self.pos
                    size: self.size

            GrupoBut:
                disabled: True
                background_normal: ''
                background_disabled_normal: self.background_normal




