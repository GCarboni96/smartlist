<MenuGrupoWindow>:
    name: "menugrupo"
    group_code: group_code
    group_name:group_name
    usuarios_layout:usuarios_layout

    FloatLayout:
        canvas.before:
            Color:
                rgba:(241/255,228/255,232/255,1)
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            pos_hint: {"top":0.9}
            size_hint: 1, 0.75
            orientation: 'vertical'
            padding: 30, 10
            row_default_height: '400dp'
            row_force_default: True
            spacing: 10, 100

            Label:
                id:group_name
                text:"[b]Grupo: [/b]"
                markup: True
                halign: 'left'
                valign: 'center'
                font_size: (root.width**2 + root.height**2) / 14**4
                pos_hint: {"x":0.035, "top":1}
                size_hint: 0.8, 0.1
                color: 37/255,65/255,178/255,1
                text_size: self.size

            ScrollView:
                pos_hint: {"y":0.65}

                GridLayout:
                    id:usuarios_layout
                    cols:2
                    size_hint_y: None
                    height:self.minimum_height
                    row_default_height: '50dp'
                    row_force_default: True
                    spacing: 5, 5
                    padding: 0, 0
                    canvas.before:
                        Color:
                            rgba: (.1,.1,.1,1)
                        Rectangle:
                            pos: self.pos
                            size: self.size


                    Label:
                        text:"[b]Nombre[/b]"
                        markup: True
                        halign: 'center'
                        valign: 'center'
                        font_size: (root.width**2 + root.height**2) / 16**4
                        color: 1,0,1,1
                        text_size: self.size
                        canvas.before:
                            Color:
                                rgba: (.9,.9,.9,1)
                            Rectangle:
                                pos: self.pos
                                size: self.size
                    Label:
                        text:"[b]Opciones[/b]"
                        markup: True
                        halign: 'center'
                        valign: 'center'
                        font_size: (root.width**2 + root.height**2) / 16**4
                        color: 1,0,1,1
                        text_size: self.size
                        canvas.before:
                            Color:
                                rgba: (.9,.9,.9,1)
                            Rectangle:
                                pos: self.pos
                                size: self.size
                    Label:
                        text:"Jorge"
                        markup: True
                        halign: 'center'
                        valign: 'center'
                        font_size: (root.width**2 + root.height**2) / 16**4
                        color: 1,0,1,1
                        text_size: self.size
                        canvas.before:
                            Color:
                                rgba: (.9,.9,.9,1)
                            Rectangle:
                                pos: self.pos
                                size: self.size
                    GridLayout:
                        cols:1
                        spacing: 15, 5
                        padding: 15, 0
                        canvas.before:
                            Color:
                                rgba: (.9,.9,.9,1)
                            Rectangle:
                                pos: self.pos
                                size: self.size
                        DeleteBut:


                    Label:
                        text:"Jorge"
                        markup: True
                        halign: 'center'
                        valign: 'center'
                        font_size: (root.width**2 + root.height**2) / 16**4
                        color: 1,0,1,1
                        text_size: self.size
                        canvas.before:
                            Color:
                                rgba: (.9,.9,.9,1)
                            Rectangle:
                                pos: self.pos
